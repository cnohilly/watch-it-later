{{!-- container for each comment --}}
<article class="media">
    <figure class="media-left">
        <p class="image is-48x48">
            {{!-- container for user profile image --}}
            <img class="is-rounded pfp-picture" src="{{user.pfp_path}}">
        </p>
    </figure>
    <div class="media-content">
        <div class="content">
            <p class="has-text-grey-lighter">
                <strong class="has-text-info">{{user.username}}</strong>
                <small>{{format_date createdAt}}</small>
                <br>
                {{comment_text}}
                <br>
                <a href="/{{content_type}}/{{content_id}}">
                    <small>Go to {{content_type}} page</small>
                </a>
            </p>
        </div>
    </div>
</article>